##Maven Plugin to generate BO with wsdl
<build>
  <plugins>
    <plugin>
      <groupId>org.apache.cxf<groupId>
      <artifactId>cxf-codegen-plugin</artifactId>
      <executions>
        <execution>
          <id>all-generate-sources</id>
          <phase>generate-sources</phase>
          <goals>
            <goal>wsdl2java</goal>
          </goals>
          <configuration>
            <defaulOptions>
              <bindingFiles>
                <bindingFile>${project.basedir}/src/main/resoures/wsdl/globalBindings.xml</bindingFile>
                <bindingFile>${project.basedir}/src/main/resoures/wsdl/wsdlBindings.xml</bindingFile>
              </bindingFiles>
              <extraargs>
                <extraarg>-fe</extraarg>
                <extraarg>jaxws21</extraarg>
                <extraarg>-wsdlLocation</extraarg>
                <wsdlurl/>
              </extraargs>
             </defaulOptions>
             <wsdlRoot>${project.basedir}/src/main/resoures/wsdl</wsdlRoot>
             <includes>
                <include>*.wsdl</include>
                <include>*/*.wsdl</include>
                <include>*/*/*.wsdl</include>
             </includes>
             <sourceRoot>${project.basedir}/target/generated-sources/wsdl</sourceRoot>
           </configuration>
          </execution>
         </executions>
       </plugin>
       <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>build-helper-maven-plugin</artifactId>
            <executions>
                <execution>
                    <id>add-source</id>
                    <phase>generate-sources</phase>
                    <goals>
                        <goal>add-source</goal>
                    </goals>
                    <configuration>
                        <sources>
                          <source>${project.basedir}/target/generated-sources/wsdl</source>
                        </sources>
                    </configuration>
                 <execution>
             </executions>
        </plugin>
     </plugins>
 </build>
 
